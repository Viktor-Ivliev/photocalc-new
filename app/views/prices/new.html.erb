<% content_for :futer do %>
  <li ><a class="not_active" href="<%= result_index_path %>">Ціни</a></li>
  <li><a class="not_active" href="<%= prices_path %>">Таблиці</a></li>
  <li><a class="active" href="<%= admin_session_path  %>">Адміністрація</a></li>
  <li><a class="not_active" href="<%= landing_page_photobook_path  %>">Photobook</a></li>
  <li><a class="not_active" href="<%= landing_page_printbook_path  %>">Printbook</a></li>
  <li><a class="not_active" href="<%= landing_page_slimbook_path  %>">Slimbook</a></li>
<% end %>


<div class="container">




<% @order_dates.each do |order_date| %>
      <tr>
        <td><%= order_date.info %></td>
        <td><%= order_date.date %></td>
        <td><%= link_to 'Змінити', edit_order_date_path(order_date) %></td>
      </tr>
<% end %>

<p>админ</p>

<table class="table_prices">
  <thead>
    <tr>
      <th>Вид ф</th>
      <th>Тип паперу</th>
      <th>Формат</th>
      <th>Мін кільк розв</th>
      <th>Макс кільк розв</th>
      <th>Крок</th>
      <th>Ціна від 1-4 </th>
      <th>Різниця 1-4</th>
      <th>Ціна від 5-99 </th>
      <th>Різниця 5 -99</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @prices.each do |price| %>
      <tr class=" <%= cycle('list_line_odd', 'list_line_even') %>"
>
        <td><%= price.type_photo %></td>
        <td><%= price.type_paper %></td>
        <td><%= price.format %></td>
        <td><%= price.min_num_pages %></td>
        <td><%= price.max_num_pages %></td>
        <td><%= price.step_pages %></td>
        <td><%= price.price1_4 %></td>
        <td><%= price.difference1_4 %></td>
        <td><%= price.price5_99 %></td>
        <td><%= price.difference5_99 %></td>
        <!--<td><%#= link_to 'Show', price %></td>-->
        <td><%= link_to 'Змінити', edit_price_path(price) %></td>
        <td><%= link_to 'Видалити', price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= render 'form' %>
</div>


